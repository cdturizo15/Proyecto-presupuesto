@model AccountCreateViewModel

@{
    ViewData["Title"] = "Crear cuenta";
}

<h1>Crear cuenta</h1>
<h5>Aqui puedas crear tus cuentas segun tus tipos de cuenta.</h5>


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3 bg-gray">
        <label asp-for="Name" class="form-label">Nombre*</label>
        <input  asp-for="Name" placeholder="Nombre" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="mb-3 bg gray">
        <label class="form-label" asp-for="AccountTypeId">Tipo de cuenta*</label>
        <select asp-for="AccountTypeId" asp-items="Model.AccountTypes" class="form-select"></select>
        <span asp-validation-for="AccountTypeId"></span>
    </div>

    <div class="mb-3 bg-gray">
        <label asp-for="Balance" class="form-label">Balance*</label>
        <input  asp-for="Balance" placeholder="0.00" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="mb-3 bg-gray">
        <label asp-for="Description" class="form-label">Descripcion</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}